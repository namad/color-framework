{
    "global": {
        "spacing": {
            "xs": {
                "value": "$unit * 0.5",
                "type": "spacing"
            },
            "sm": {
                "value": "$unit * 1",
                "type": "spacing"
            },
            "base": {
                "value": "$unit * 2",
                "type": "spacing"
            },
            "md": {
                "value": "$unit * 3",
                "type": "spacing"
            },
            "lg": {
                "value": "$unit * 4",
                "type": "spacing"
            },
            "xl": {
                "value": "$unit * 6",
                "type": "spacing"
            },
            "xxl": {
                "value": "$unit * 8",
                "type": "spacing"
            }
        },
        "borderRadius": {
            "sm": {
                "value": "2",
                "type": "borderRadius"
            },
            "base": {
                "value": "4",
                "type": "borderRadius"
            },
            "lg": {
                "value": "8",
                "type": "borderRadius"
            },
            "xl": {
                "value": "12",
                "type": "borderRadius"
            }
        },
        "sizing": {
            "scale-multiplier": {
                "value": "1.5",
                "type": "sizing"
            },
            "unit": {
                "value": "4",
                "type": "sizing"
            },
            "icon-size-base": {
                "value": "16",
                "type": "sizing"
            }
        },
        "borderWidth": {
            "border-width-base": {
                "value": "1",
                "type": "borderWidth"
            }
        },
        "button": {
            "border-radius": {
                "value": "$borderRadius.base",
                "type": "borderRadius"
            },
            "padding-y": {
                "value": "$space.sm",
                "type": "spacing"
            },
            "padding-x": {
                "value": "$space.base",
                "type": "spacing"
            }
        }
    }
}